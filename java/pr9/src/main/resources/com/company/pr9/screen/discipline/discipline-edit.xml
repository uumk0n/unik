<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://disciplineEdit.caption"
        focusComponent="form">
    <data>
        <instance id="disciplineDc"
                  class="com.company.pr9.entity.Discipline">
            <fetchPlan extends="_base">
                <property name="bus" fetchPlan="_base"/>
                <property name="participants" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
        <collection id="bussDc"
                    class="com.company.pr9.entity.bus"
                    fetchPlan="_base">
            <loader id="customersDl">
                <query>
                    <![CDATA[select e from bus e]]>
                </query>
            </loader>
        </collection>

        <collection id="participantDc"
                    class="com.company.pr9.entity.Participant">
            <fetchPlan extends="_base">
<!--                <property name="disciplines" fetchPlan="_base"/>-->
            </fetchPlan>
            <loader id="disciplineDl">
                <query>
                    <![CDATA[select p from Participant p where p.bus=:component_busField]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="disciplineDc">
            <column width="350px">
                <textField id="nameField" property="name"/>

                <singleSelectList id="busField"
                                  caption="msg://disciplineBrowse.caption"
                                  property="bus"
                                  optionsContainer="bussDc"
                                  nullOptionVisible="false"
                                  height="100"/>
                <tagPicker id="participantField"
                           property="participants"
                           optionsContainer="participantDc"
                />
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>

<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Lab7">
        <createTable tableName="bus">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_bus"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Lab7">
        <createTable tableName="DISCIPLINE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DISCIPLINE"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="bus_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="Lab7">
        <createTable tableName="PARTICIPANT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PARTICIPANT"/>
            </column>
            <column name="FIO" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="HEIGHT" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="WEIGHT" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="DOB" type="DATE"/>
            <column name="bus_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="Lab7">
        <createTable tableName="PARTICIPANT_DISCIPLINE_LINK">
            <column name="DISCIPLINE_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PARTICIPANT_DISCIPLINE_LINK"/>
            </column>
            <column name="PARTICIPANT_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PARTICIPANT_DISCIPLINE_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="5" author="Lab7">
        <createIndex indexName="IDX_DISCIPLINE_bus_ID" tableName="DISCIPLINE">
            <column name="bus_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="bus_ID" baseTableName="DISCIPLINE"
                                 constraintName="FK_DISCIPLINE_ON_bus" referencedColumnNames="ID"
                                 referencedTableName="bus"/>
    </changeSet>
    <changeSet id="6" author="Lab7">
        <createIndex indexName="IDX_PARTICIPANT_bus_ID" tableName="PARTICIPANT">
            <column name="bus_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="bus_ID" baseTableName="PARTICIPANT"
                                 constraintName="FK_PARTICIPANT_ON_bus" referencedColumnNames="ID"
                                 referencedTableName="bus"/>
    </changeSet>
    <changeSet id="7" author="Lab7">
        <addForeignKeyConstraint baseColumnNames="DISCIPLINE_ID" baseTableName="PARTICIPANT_DISCIPLINE_LINK"
                                 constraintName="FK_PARDIS_ON_DISCIPLINE" referencedColumnNames="ID"
                                 referencedTableName="DISCIPLINE"/>
    </changeSet>
    <changeSet id="8" author="Lab7">
        <addForeignKeyConstraint baseColumnNames="PARTICIPANT_ID" baseTableName="PARTICIPANT_DISCIPLINE_LINK"
                                 constraintName="FK_PARDIS_ON_PARTICIPANT" referencedColumnNames="ID"
                                 referencedTableName="PARTICIPANT"/>
    </changeSet>
</databaseChangeLog>
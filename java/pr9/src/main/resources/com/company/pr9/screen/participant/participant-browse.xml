<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://participantBrowse.caption"
        focusComponent="participantsTable">
    <data readOnly="true">
        <collection id="participantsDc"
                    class="com.company.pr9.entity.Participant">
            <fetchPlan extends="_base">
                <property name="bus" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="participantsDl">
                <query>
                    <![CDATA[select e from Participant e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="participantsTable" spacing="true">
        <filter id="filter"
                dataLoader="participantsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="participantsTable"
                    width="100%"
                    dataContainer="participantsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="fio"/>
                <column id="height"/>
                <column id="weight"/>
                <column id="dob"/>
                <column id="bus"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="participantsTable.create"/>
                <button id="editBtn" action="participantsTable.edit"/>
                <button id="removeBtn" action="participantsTable.remove"/>
                <button id="extraBtn"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>

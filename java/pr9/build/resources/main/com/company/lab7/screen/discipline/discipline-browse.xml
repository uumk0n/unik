<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://disciplineBrowse.caption"
        focusComponent="disciplinesTable">
    <data readOnly="true">
        <collection id="disciplinesDc"
                    class="com.company.lab7.entity.Discipline">
            <fetchPlan extends="_base">
                <property name="contest" fetchPlan="_base"/>
                <property name="participants" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="disciplinesDl">
                <query>
                    <![CDATA[select e from Discipline e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="disciplinesTable" spacing="true">
        <filter id="filter"
                dataLoader="disciplinesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="disciplinesTable"
                    width="100%"
                    dataContainer="disciplinesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="contest"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="disciplinesTable.create"/>
                <button id="editBtn" action="disciplinesTable.edit"/>
                <button id="removeBtn" action="disciplinesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>

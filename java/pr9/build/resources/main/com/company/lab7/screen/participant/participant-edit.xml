<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://participantEdit.caption"
        focusComponent="form">
    <data>
        <instance id="participantDc"
                  class="com.company.lab7.entity.Participant">
            <fetchPlan extends="_base">
                <property name="contest" fetchPlan="_base"/>
                <property name="disciplines" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
        <collection id="contestsDc"
                    class="com.company.lab7.entity.Contest"
                    fetchPlan="_base">
            <loader id="customersDl">
                <query>
                    <![CDATA[select e from Contest e]]>
                </query>
            </loader>
        </collection>

        <collection id="disciplinesDc"
                    class="com.company.lab7.entity.Discipline">
            <fetchPlan extends="_base">
                <property name="participants" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="disciplineDl">
                <query>
                    <![CDATA[select d from Discipline d where d.contest=:component_contestField]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="participantDc">
            <column width="350px">
                <textField id="fioField" property="fio"/>
                <currencyField id="heightField" property="height" currency="cm"/>
                <currencyField id="weightField" property="weight" currency="kg"/>
                <dateField id="dobField" property="dob"/>
                <singleSelectList id="contestField"
                                  caption="msg://participantEdit.contestFieldCaption"
                                  property="contest"
                                  optionsContainer="contestsDc"
                                  nullOptionVisible="false"
                                  height="100"/>
                <tagPicker id="disciplineField"
                           property="disciplines"
                           optionsContainer="disciplinesDc"
                />
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>

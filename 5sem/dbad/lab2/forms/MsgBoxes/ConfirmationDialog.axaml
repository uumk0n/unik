<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="lab1.ConfirmationDialog"
        mc:Ignorable="d"
        Title="Confirmation"
        Width="400" Height="200"
        Background="Orange">
    <Grid>
        <TextBlock x:Name="QuestionText" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Да" Margin="5" Click="Button_Click"/>
            <Button Content="Нет" Margin="5" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>

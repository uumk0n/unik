<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="lab1.CreateDocs"
        Title="Формирование отчётов" Width="400" Height="200"
        Background="Orange">

    <StackPanel Orientation="Horizontal">
        <!-- Left Column with Checkboxes -->
        <StackPanel>
            <CheckBox Name="checkBox1" Content="Table 1" Margin="5"/>
            <CheckBox Name="checkBox2" Content="Table 2" Margin="5"/>
            <CheckBox Name="checkBox3" Content="Table 3" Margin="5"/>
            <CheckBox Name="checkBox4" Content="Table 4" Margin="5"/>
        </StackPanel>

        <!-- Right Column with DatePicker -->
        <StackPanel>
            <Button Content="Сформировать отчёт" HorizontalAlignment="Right" Margin="10" Click="Button_Click"/>
            <TextBlock Text="С :" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <DatePicker x:Name="datePickerStart" HorizontalAlignment="Right" Width="300" Margin="10"/>
            <TextBlock Text="По :" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <DatePicker x:Name="datePickerEnd" HorizontalAlignment="Right" Width="300" Margin="10"/>

        </StackPanel>
    </StackPanel>

</Window>
